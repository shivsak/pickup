<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <%= f.label :date %>
  <div class="fields">
    <%= f.datetime_select :date %>
  </div>
  <br />
  <div class="field">
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  </div>
  <div class="field">
    <%= f.label :game_type %>
    <%= f.text_field :game_type %>
  </div>
  <div class="field">
    <%= f.label :max_participants %>
    <%= f.number_field :max_participants %>
  </div>
  <div class="ui info message">
    <a href="#" class="ui basic button"><i class="icon facebook"></i>Invite Friends</a>
  </div>

  <div class="actions">
    <%= f.submit "Create Game", class: "ui button teal" %>
    <%= link_to 'Back', games_path %>
  </div>
<% end %>
